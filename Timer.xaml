      d:DesignHeight="450" d:DesignWidth="800"
      Title="Timer" Background="White">

    <Grid>
        <Grid>
            <DataGrid Name="DataGrid" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Notes" Width="*" />
                    <DataGridTextColumn Header="Total Hours"  Width="*" />
                    <DataGridTextColumn Header="Timer" Width="*" />
                    <DataGridTextColumn>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                        <DataGridTextColumn.Header>
                            <Grid Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="60"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="1" HorizontalAlignment="Center" Margin="20,0,0,0" x:Name="AddNewButton" Click="Add_New_Button">
                                    <Image Source="D:\CSharp\TIMER_APPLICATION\TIMER_APPLICATION\Images\AddNew.png" Width="20" Height="20" />
                                </Button>
                            </Grid>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                        <DataGridTextColumn.Header>
                            <Grid Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="60"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="1" HorizontalAlignment="Center" Margin="20,0,0,0" x:Name="FilterBtn" Click="Filter_Click">
                                    <Image Source="D:\CSharp\TIMER_APPLICATION\TIMER_APPLICATION\Images\Filter.png" Width="20" Height="20" />
                                </Button>
                            </Grid>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
